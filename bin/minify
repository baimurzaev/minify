#!/usr/bin/env php
<?php

use Hawk\Minify\Constants\Minify;

$files = [
    __DIR__ . '/../../../autoload.php',
    __DIR__ . '/../vendor/autoload.php'
];

foreach ($files as $file) {
    if (file_exists($file)) {
        require $file;
        break;
    }
}

$minify = new \Hawk\Minify\Minify();

echo PHP_EOL . "#" . Minify::SEPARATOR . "
#    █───█──███──█──█──███──███──█───█    
#    ██─██───█───██─█───█───█─────█─█     
#    █─█─█───█───█─██───█───███────█      
#    █───█───█───█──█───█───█─────█      
#    █───█──███──█──█──███──█────█      
#    ───────────────────────────█    
#" . Minify::SEPARATOR . PHP_EOL;

try {
    $minify->squeeze();
} catch (Throwable $e) {
    echo PHP_EOL . "Error: {$e->getMessage()}" . PHP_EOL;
    die();
}

echo Minify::SEPARATOR . PHP_EOL;