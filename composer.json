{
  "name": "baimurzaev/minify",
  "type": "library",
  "description": "Minify code a before deployment ",
  "license": "MIT",
  "keywords": [
    "minify",
    "prepare",
    "deploy",
    "minify 2",
    "php-deploy",
    "deployment",
    "minify code"
  ],
  "homepage": "https://github.com/baimurzaev",
  "authors": [
    {
      "name": "Ruslan Baimurzaev"
    }
  ],
  "require-dev": {
    "phpunit/phpunit": "^9.5"
  },
  "autoload": {
    "psr-4": {
      "Hawk\\Minify\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Hawk\\Tests\\Minify\\": "tests"
    }
  },
  "require": {
    "php": ">=8.1",
    "ext-simplexml": "*"
  },
  "bin": [
    "bin/minify"
  ],
  "scripts": {
    "deploy": [
      "@minify"
    ],
    "test": [
      "@phpunit"
    ],
    "phpunit": "phpunit",
    "minify": "minify"
  }
}